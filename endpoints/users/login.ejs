<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1628062411051-f1be1f511c7b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1502&q=80"
                    alt="" class="img-fluid">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Enter Username:</label>
                            <input class="form-control" type="text" id="username" name="username"
                                placeholder="SirLordKing98" autofocus required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Enter Password:</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <button class="btn btn-success">Login</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../partials/formValidation') %>