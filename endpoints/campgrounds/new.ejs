<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Enter Title:</label>
                    <input class="form-control" type="text" id="title" name="title" placeholder="Mount Mordor" required>
                    <div class="valid-feedback">
                        Nice title!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Enter Location:</label>
                    <input class="form-control" type="text" id="location" name="location"
                        placeholder="Jakarta, Indonesia" required>
                    <div class="valid-feedback">
                        Good location!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add Images</label>
                    <input class="form-control" type="file" name="images" id="images" multiple>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Enter Price:</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" name="price" placeholder="0.00" required>
                        <div class="valid-feedback">
                            Fair Price!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Enter Description:</label>
                    <textarea class="form-control" name="description" id="description"
                        placeholder="Destroyer of the One Ring." rows="5" required></textarea>
                    <div class="valid-feedback">
                        Awesome Description!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
            </form>
            <a class="btn btn-secondary" href="/campgrounds">All Campgrounds</a>
        </div>
    </div>

<%- include('../partials/formValidation') %>